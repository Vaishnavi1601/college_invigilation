              <h4 class="modal-title">Admin Login</h4>
              <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <!-- Modal body -->
            <div class="modal-body">
              <form method="POST" action="/">
                <label>Username / Email:*</label>
                <input type="text" name="email" placeholder="Please Enter Email or Username" class="form-control"><br>
                <label>Password:*</label>
                <input type="password" name="password" placeholder="Please Enter Password" class="form-control"><br>
                <input type="submit" name="login-as-admin" value="Login Now" class="btn btn-info">
                <!-- redirect to admin folder index.html when login success -->
              </form>
            </div>
            <!-- Modal footer -->
            <div class="modal-footer">
              <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
      </div>

