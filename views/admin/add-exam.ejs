<%- include('../includes/admin/head.ejs') %>
<%- include('../includes/admin/navigation.ejs') %>

</header>
<br><br><br>
<section class="container">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item active" aria-current="page">
        Admin Dashboard / Add Exam
      </li>
    </ol>
  </nav>
</section>

<section>
  <div class="container">
    <div class="row">
      <div class="col-md-6">
          <a href="/admin/generate-plans" class="btn btn-info">Generate Seat Plan</a>
      </div>
      <div class="col-md-6">
      </div>
    </div>
    <br>
    <div class="row">
      <div class="col-md-6 border">
        <h3>Add a new Exam </h3>
        <form action="/admin/add-exam" method="POST">
          <label>Exam Title</label>
          <input type="text" name="examTitle" class="form-control" placeholder="Please enter title . Ex. Java Exam 6th Sem CS">
          <label>Branch</label>
          <select class="form-control text-center" name="branch" >
            <option selected="" disabled="">-- Select Branch --</option>
            <option value="ISE">ISE</option>
            <option value="CSE">CSE</option>
            <option value="EEE">EEE</option>
            <option value="ECE">ECE</option>
          </select>
          <label>Choose Semester</label>
          <select class="form-control text-center" name="sem">
            <option>-- Choose Semester --</option>
            <option value="2">2</option>
            <option value="4">4</option>
            <option value="6">6</option>
            <option value="8">8</option>
          </select>
          <label>Choose Date</label>
          <input type="date" name="date" class="form-control">
          <label>Choose Time slot</label>
          <select class="form-control text-center" name="slot">
            <option selected="" disabled="">-- Time Slot --</option>
            <option value="1">1- 9:30AM - 12:30 PM</option>
            <option value="1">2- 2:00PM - 05:00 PM</option>
          </select>
          <br>
          <input type="submit" name="submit" value="Save Now" class="btn btn-primary">
        </form>
        <br>
      </div>
      <div class="col-md-6 border">
        <h2>Scheduled Exams</h2>
        <p>Display all the upcoming exam</p>
        <% if(exams.length > 0 ) { %>
        <table class="table table-bordered">
          <tr>
            <th>Sl No</th>
            <th>Title of Exam</th>
            <th>branch</th>
            <th>sem</th>
            <th>Timing Slot</th>
            <th>Action</th>
          </tr>
          <% for(let i= 1; i < exams.length; i ++) { %>
          <tr>
            <td><%= i %></td>
            <td><%= exams[i-1].examTitle %></td>
            <td><%= exams[i-1].branch%> %></td>
            <td><%= exams[i-1].sem %></td>
            <td><%= exams[i-1].slot %></td>
            <td>
              <a href="/admin/delete-exam/<%= exams[i-1]._id %>">
              <button class="btn btn-danger btn-sm"><i class="fa fa-trash"></i></button>
              </a>  
            </td>
          </tr>
          <% } %>
        </table>
        <% } else { %>
          <h1>No exams Scheduled</h1> 
        <% } %>
      </div>
    </div>
  </div>
</section>

<br><br><br>

