<%- include('../includes/admin/head.ejs') %>

<%- include('../includes/admin/navigation.ejs') %>
</header>

<br><br><br>

<section class="container">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item active" aria-current="page">
      Admin Dashboard / University Exam</li>
    </ol>
  </nav>
</section>

<br> <br>

<section>
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <div class="border" style="padding:10px;">
          <p>Add University Schedule</p>
          <form enctype="multipart/form-data" action="/admin/university-exam" method="POST">
            <label>Title:</label>
            <input type="text" name="title" placeholder="Please Enter Title" class="form-control">
            <br>
            <label>Upload File:</label>
            <input type="file" name="university-exam" class="form-control">
            <br>
            <input type="submit" name="" value="Add Now" class="btn btn-primary">
          </form>
        </div> <!-- // form order -->
      </div>
      <div class="col-md-6 border">
        <br>
        <h4>All Schedules</h4>
        <% if (universityExam.length > 0 ) { %>
        <table class="table table-bordered table-striped">
          <tr>
            <th>Title </th>
            <th> Action </th>
          </tr>
          <% for (let uExam of universityExam) { %>
          <tr>
            <td><%= uExam.title %></td>
            <td>
                <a href="/admin/university-exam/<%= uExam._id %> ">
                <button class="btn btn-danger btn-sm"><i class="fa fa-trash"></i></button>
                </a>
            </td>
          </tr>
          <% } %>
        </table>
        <% } else { %>
          <h1>No Exam Found</h1>
        <% } %>
      </div>
    </div> <!-- // row -->
  </div>
</section>

<br><br><br>

